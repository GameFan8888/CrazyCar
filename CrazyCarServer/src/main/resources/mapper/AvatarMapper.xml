<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tastsong.crazycar.mapper.AvatarMapper">
    <select id="getAvatarList" resultType="AvatarModel">
        select
        *
        from avatar_name;
    </select>

    <select id="getAvatarByAid" resultType="AvatarModel">
        select
        *
        from avatar_name
        where aid= #{aid};
    </select>

    <select id="getAvatarNumByUid" resultType="Integer">
        select
        Count(*)
        from avatar_uid 
        where uid = #{uid};
    </select>

    <insert id="addAvatarForUser">
        insert into avatar_uid (
          aid, uid
        ) VALUES (
         #{aid}, #{uid}
        )
    </insert>

    <select id="isHasAvatar" resultType="boolean">
        select exists(
        select
        id
        from avatar_uid 
        where uid = #{uid} and aid = #{aid});
    </select>

    <update id="updateAvatarInfo" parameterType="AvatarModel">
        update avatar_name
        set rid = #{rid}, avatar_name = #{avatar_name}, star = #{star}
        where aid = #{aid}
    </update>
</mapper>